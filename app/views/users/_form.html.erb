<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
      <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "username" %>
  </p>

  <p>
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "user@example.com" %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "******" %>
  </p>

  <%= form.submit "Submit" %>
<% end %>
